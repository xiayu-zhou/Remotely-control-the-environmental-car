<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@mipmap/findbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="30dp">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/logoc"/>
        <TextView
            android:gravity="center_horizontal"
            android:text="星宇购物系统"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/IndexFind"
            android:alpha="0.8"
            android:layout_width="270dp"
            android:layout_height="38dp"
            android:background="#D5DAD9" />

        <Button
            android:id="@+id/IndexFindBtn"
            android:text="搜索"
            android:backgroundTint="@color/blue"
            android:layout_width="80dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/transparent_white"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/JIA"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@mipmap/jia"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textColor="@color/blue"
                android:text="智能家居"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/CHUAN"
            android:layout_marginLeft="36dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@mipmap/chuan"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="智能穿戴"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/CHU"
            android:layout_marginLeft="36dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@mipmap/xing"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="智能出行"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/QI"
            android:layout_marginLeft="36dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@mipmap/qi"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textColor="@color/blue"
                android:gravity="center_horizontal"
                android:text="其他"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:alpha="0.7"
        android:gravity="center_horizontal"
        android:background="#AEF8F1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:textColor="#1732C8"
            android:textSize="18dp"
            android:gravity="center"
            android:text="热门产品"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>


    <ScrollView
        android:background="@color/transparent_white"
        android:layout_width="350dp"
        android:layout_height="473dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Hot1"
                        android:layout_width="110dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/Hot1t"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E5F3F1"
                        android:gravity="center"
                        android:textColor="#010410" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Hot2"
                        android:layout_width="110dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/Hot2t"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E5F3F1"
                        android:gravity="center"
                        android:textColor="#010410" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Hot3"
                        android:layout_width="110dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/Hot3t"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E5F3F1"
                        android:gravity="center"
                        android:textColor="#010410" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CommodityShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
