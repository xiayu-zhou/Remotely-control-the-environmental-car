<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/loginback"
    android:gravity="center_horizontal"
    tools:context=".AdminPerson">
    <TextView
        android:textColor="#A5C8DA"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="星宇购物系统"
        android:textSize="40dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <ImageView
        android:src="@mipmap/logoc"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:text="管理员个人"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="ID:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMeID"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="密码:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMePWD"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="姓名:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMeName"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="年龄:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:digits="1234567890"
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMeAge"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="性别:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:digits="男女"
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMeSex"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:text="电话:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:digits="1234567890"
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMePhone"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="职位:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMePosition"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="部门:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMeDp"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="地址:"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@null"
                android:focusable="false"
                android:id="@+id/AdminShowMeAddress"
                android:layout_width="270dp"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/AdminStartSetting"
            android:backgroundTint="@color/blue"
            android:text="开始修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/AdminFinishSetting"
            android:text="完成修改"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>