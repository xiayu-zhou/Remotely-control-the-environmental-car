<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@mipmap/personbg"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/MeBack"
            android:alpha="0.7"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/UserShaoMa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#6AFFFFFF"
                android:src="@mipmap/shaoma" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:src="@mipmap/logoc"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:alpha="0.7"
            android:background="@color/white"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="星宇购物中心"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/User1"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/already_buy"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:layout_marginLeft="20dp"
                android:text="购物记录"
                android:id="@+id/IndexAlreadyBuy"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/User2"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/shopping_car"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/MeToShoppingCar"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:text="购物车"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/User3"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/congrmb"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/UserCong"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:text="充值"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/person"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:text="个人信息"
                android:id="@+id/ToPerson"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/User4"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/mydev"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:text="我的设备"
                android:id="@+id/UserMYDEV"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Admin1"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/adminnoticebg"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/AdminNoticeSend"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:text="发布公告"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Admin2"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/adminguanlibg"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/AdminGoods"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:text="商品管理"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Admin3"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@mipmap/adminliushuibg"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/AdminFlowing"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:text="商品流水"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>