<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginback"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".FindID">
    <TextView
        android:id="@+id/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="星宇购物系统账号找回"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#808080"
        android:textSize="30dp" />

    <ImageView
        android:src="@mipmap/logoc"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="252dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/FindID"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="@color/transparent_white"
            android:hint="请输入电话" />

        <EditText
            android:id="@+id/FindName"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@color/transparent_white"
            android:hint="请输入名字" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:background="@color/transparent_white"
                android:gravity="center"
                android:text="账号为"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/FindResultID"
                android:gravity="center"
                android:text=""
                android:background="@color/transparent_white"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:background="@color/transparent_white"
                android:gravity="center"
                android:text="密码为"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/FindResultPwd"
                android:gravity="center"
                android:text=""
                android:background="@color/transparent_white"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>


    </LinearLayout>

    <Button
       android:text="提交"
        android:layout_marginTop="30dp"
        android:id="@+id/FindSubmit"
        android:backgroundTint="@color/blue"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

</LinearLayout>